extends layout

include shelf.pug
include utils.pug
    link(rel="stylesheet" href="/stylesheets/shelf.css")
    script(src="/javascripts/shelfButton.js" type="module" defer)

block content
    if(userShelves)
        div(class="user__shelves")
        h1 Your Shelves 
        each shelf in userShelves
            //- h3(class="shelf-title") Shelf: #{shelf.name}
            div(class='shelfInstance')
                h3(class="shelf-title") Shelf: #{shelf.name}
                h2(id=shelf.name)
                    each Comic in shelf.Comics
                        +comicCard( Comic.coverUrl, Comic.title, Comic.author, Comic.genre, Comic.id)


